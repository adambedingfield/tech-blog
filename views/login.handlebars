<h2 class="page-title">Login</h2>
<form class="pure-form pure-form-stacked form-spacing">
    <fieldset>
        <label for="email-login">Email</label>
        <input type="email" id="email-login" placeholder="Email"/>
        <label for="password-login">Password</label>
        <input type="password" id="password-login" placeholder="Password" />
        <button type="submit" class="pure-button pure-button-primary login-btn">Login</button>
    </fieldset>
    <p class="login-signup-title">Not a user?</p>
    <a href="/signup"><button type="button" class="pure-button pure-button-primary signup-btn">Sign up</button></a>
</form>

<!-- javascript file-->
<script src="/javascript/login.js"></script>